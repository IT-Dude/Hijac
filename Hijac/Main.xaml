<Window x:Class="Hijac.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Hijac="clr-namespace:Hijac"
        Title="Hijac" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        
        <!-- Column 0 -->
        <Button Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3"
                Content="Toolbar" />
        <Button Grid.Column="0" Grid.Row="1"
                Content="Some stuff" />
        <Button Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="3"
                Content="Some bottom toolbar stuff" />
        
        <!-- Column 1 -->
        <Hijac:CalendarView Grid.Column="1" Grid.Row="1" />

        <!-- Column 2 -->
        <Button Grid.Column="2" Grid.Row="1"
                Content="Some different view" />
    </Grid>
</Window>